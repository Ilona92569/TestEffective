<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView_Headings" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="roundCornerImageView16" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="roundCornerImageView8" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomBottomSheetMenu" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="BottomSheetMenuStyle" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetMenu</item>
    </style>

    <style name="ButtonChoice" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="ButtonItalic" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_display_regular_italic</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="circleImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>